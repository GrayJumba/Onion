<Application x:Class="Records_Desk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SDLibrary;component/Style/SDStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Violet.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="MainBrush" Color="BlueViolet"/>
            <sys:String  xmlns:sys="clr-namespace:System;assembly=mscorlib" x:Key="AppTitle">Records Desk</sys:String>
            <ImageBrush x:Key="MainBackGround" ImageSource="numbers.png"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
