<UserControl x:Class="AcademicsDesk.Pages.Results"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:MySQLHandler="clr-namespace:AcademicsDesk.MySQLHandler"
             xmlns:common="clr-namespace:SmartDesk.Controls;assembly=SDLibrary"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:pages="clr-namespace:AcademicsDesk.Pages"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1000" Background="WhiteSmoke" >
    <metro:MetroAnimatedTabControl>
        <metro:MetroTabItem Header="Mark Sheets">
            <pages:MarkSheet></pages:MarkSheet>
        </metro:MetroTabItem>
        <metro:MetroTabItem Header="Awards">
            <pages:Awards></pages:Awards>
        </metro:MetroTabItem>
        <metro:MetroTabItem Header="Classes">
            <pages:ClassResults></pages:ClassResults>
        </metro:MetroTabItem>
        <metro:MetroTabItem Header="Subjects">
            <pages:SubjectResults></pages:SubjectResults>
        </metro:MetroTabItem>
        <metro:MetroTabItem Header="Summary">
            <pages:SummaryResults></pages:SummaryResults>
        </metro:MetroTabItem>
    </metro:MetroAnimatedTabControl>
</UserControl>
