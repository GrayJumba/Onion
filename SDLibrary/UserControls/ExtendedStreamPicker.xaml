<UserControl x:Class="SmartDesk.Controls.ExtendedStreamPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:SDControls="clr-namespace:SmartDesk.Controls"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="700">
        <Grid MaxWidth="700">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="stream_section" Width="*"></ColumnDefinition>
            <ColumnDefinition Name="class_section" Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <SDControls:StreamPicker  x:Name="stream_Picker" Grid.Column="0" x:FieldModifier="public"  Margin="0,0,5,0"  HorizontalAlignment="Stretch"    />
        <SDControls:ClassPicker x:Name="Class_Picker" Grid.Column="1"    HorizontalAlignment="Stretch"     Margin="5,0,0,0" />
    </Grid>
</UserControl>
