<UserControl x:Class="SmartDesk.Controls.ExtendedStudentPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:SDControls="clr-namespace:SmartDesk.Controls"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="700">
        <Grid MaxWidth="700">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="student_section"  Width="2*"></ColumnDefinition>
            <ColumnDefinition Name="stream_section" Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <SDControls:StudentPicker  x:Name="Student_Picker" Grid.Column="0" HorizontalAlignment="Stretch"   Margin="0,0,5,0"/>
        <SDControls:ExtendedStreamPicker x:Name="Extended_Stream_Picker" Grid.Column="1"  HorizontalAlignment="Stretch"  Margin="5,0,0,0" />
    </Grid>
</UserControl>
